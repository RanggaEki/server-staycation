<div class="tab-pane fade show active" id="edit-item" role="tabpanel" aria-labelledby="profile-tab">
  <div class="card shadow mb-4 mt-2">
    <div class="card-body">
      <form action="/admin/item/<%= item.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
        <div class="form-group">
          <label for="title">Title</label>
          <input type="text" class="form-control" id="title" value="<%= item.title %>" name="title" placeholder="Enter Title" required>
        </div>
        <div class="form-group">
          <label for="price">Price</label>
          <input type="text" class="form-control" id="price" value="<%= item.price %>" name="price" placeholder="Enter Price" required>
        </div>
        <div class="form-group">
          <label for="city">City</label>
          <input type="text" class="form-control" id="city" value="<%= item.city %>" name="city" placeholder="Enter City" required>
        </div>
        <div class="form-group">
          <label for="categoryId">Category</label>
          <select name="categoryId" id="categoryId" class="form-control">
            <option value="<%= item.categoryId._id %>">--- <%= item.categoryId.name %> ---</option>
            <% for(let i = 0; i < category.length; i++){ %>
              <option value="<%= category[i].id %>"><%= category[i].name %></option>
            <% } %>
          </select>
        </div>
        <div class="form-group">
          <label for="image">Image</label>
          <input type="file" class="form-control" id="image" name="image" multiple>
        </div>
        <div class="form-group">
          <label for="about">Description</label>
          <textarea class="form-control" id="about" name="about"><%= item.description %></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
      </form>
    </div>
  </div>
</div>