<div class="tab-pane fade show active" id="show-feature" role="tabpanel" aria-labelledby="home-tab">
  <div class="card shadow mb-4 mt-2">
    <div class="card-body">
      <div class="row">
        <div class="col-md-5">
          <form action="/admin/item/detail/add/feature" method="POST" enctype="multipart/form-data">
            <div class="form-group">
              <label for="name">Name</label>
              <input type="text" class="form-control" id="name" name="name" placeholder="Enter name" required>
            </div>
            <div class="form-group">
              <label for="quantity">Quantity</label>
              <input type="number" class="form-control" id="quantity" name="quantity" placeholder="Enter Quantity" required>
            </div>
            <div class="form-group">
              <label for="image">Image</label>
              <input type="file" class="form-control" id="image" name="image" required>
            </div>
            <input type="hidden" value="<%= itemId %>" name="itemId" >
            <button type="submit" class="btn btn-primary">Save</button>
          </form>
        </div>
        <div class="col-md-7">
          <div class="table-responsive">
            <table class="table table-bordered" id="dataTableFeature" width="100%" cellspacing="0">
              <thead>
                <tr>
                  <th>No</th>
                  <th>Name</th>
                  <th>Quantity</th>
                  <th>Image</th>
                  <th>Action</th>
                </tr>
                <tbody>
                  <% for(let i = 0; i < features.length; i++){ %>
                    <tr>
                      <td><%= i + 1 %></td>
                      <td><%= features[i].name %></td>
                      <td><%= features[i].quantity %></td>
                      <td>
                        <img
                          src="http://localhost:3000/<%= features[i].imageUrl %>"
                          alt="image"
                          width="50%"
                        >
                      </td>
                      <td>
                        <form action="/admin/item/detail/delete/feature/<%= features[i].id %>?_method=DELETE" method="POST">
                          <a 
                            href="javascript:void()"
                            type="button"
                            class="btn btn-warning btn-circle btn-sm button-update"
                            data-id="<%= features[i]._id %>"
                            data-name="<%= features[i].name %>" 
                            data-quantity="<%= features[i].quantity %>"
                          >
                            <i class="fas fa-edit"></i>
                          </a>
                          <input type="hidden" value="<%= itemId %>" name="itemId">
                          <button type="submit" class="btn btn-danger btn-circle btn-sm"><i class="fas fa-trash"></i></button>
                        </form>
                      </td>
                    </tr>
                  <% } %>
                </tbody>
              </thead>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>