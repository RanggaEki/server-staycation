<%- include('../../components/admin/item-detail-edit-feature.ejs') %>
<%- include('../../components/admin/item-detail-edit-activity.ejs') %>
<%- include('../../components/script.ejs') %>
<script>
  $(document).ready(function(){
    $('#dataTableFeature').DataTable();
    $('#dataTableActivity').DataTable();
  })

  $('#dataTableFeature').on('click','.button-update', function(){
    let id = $(this).data('id');
    let name = $(this).data('name');
    let quantity = $(this).data('quantity');
    $('#edit-feature-modal').modal('show');
    $('.id').val(id);
    $('.name').val(name);
    $('.quantity').val(quantity);
  })

  $('#dataTableActivity').on('click','.button-update', function(){
    let id = $(this).data('id');
    let name = $(this).data('name');
    let type = $(this).data('type');
    $('#edit-activity-modal').modal('show');
    $('.id').val(id);
    $('.name').val(name);
    $('.type').val(type);
  })
</script>
